{
  "extends": [
    "config:base",
    "docker:enableMajor",
    "default:automergeDigest"
  ],
  "semanticCommitScope": "deps",
  "labels": ["chore"],
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "docker": {
    "pinDigests": true,
    "semanticCommitType": "build"
  },
  "docker-compose": {
    "digest": {
      "enabled": false
    },
    "pinDigests": false
  },
  "packageRules": [
    {
      "packagePatterns": ["node"],
      "groupName": "node",
      "semanticCommitScope": "docker"
    }
  ]
}
