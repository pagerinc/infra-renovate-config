{
  "extends": [
    "config:base",
    "docker:enableMajor",
    "default:automergeDigest"
  ],
  "branchPrefix": "renovate_",
  "semanticCommits": true,
  "semanticCommitScope": "deps",
  "labels": ["chore"],
  "schedule": ["after 10pm and before 1pm on every weekday", "every weekend"],
  "prCreation": "not-pending",
  "stabilityDays": 1,
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "masterIssue": true,
  "masterIssueAutoclose": true,
  "docker": {
    "pinDigests": true,
    "semanticCommitType": "build"
  },
  "docker-compose": {
    "digest": {
      "enabled": false
    },
    "pinDigests": false
  },
  "node": {
    "supportPolicy": ["lts_latest"],
    "semanticCommitScope": "docker",
    "automerge": true
  },
  "packageRules": [
    {
      "packagePatterns": ["node"],
      "allowedVersions": "^12",
      "semanticCommitScope": "docker",
      "automerge": true
    },
    {
      "packageNames": ["postgres"],
      "allowedVersions": "^11",
      "semanticCommitScope": "docker",
      "automerge": true
    },
    {
      "packageNames": ["mongo"],
      "allowedVersions": "^4.2",
      "semanticCommitScope": "docker",
      "automerge": true
    },
    {
      "packageNames": ["redis"],
      "allowedVersions": "^4",
      "semanticCommitScope": "docker",
      "automerge": true
    },
    {
      "packageNames": ["rabbitmq"],
      "allowedVersions": "^3.8",
      "semanticCommitScope": "docker",
      "automerge": true
    },
    {
      "packagePatterns": ["hadolint", "cloud-sdk"],
      "semanticCommitScope": "drone",
      "automerge": true
    }
  ]
}
